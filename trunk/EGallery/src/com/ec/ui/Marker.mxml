<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100" height="100" creationComplete="group1_creationCompleteHandler(event)" currentStateChange="group1_currentStateChangeHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import mx.events.StateChangeEvent;

			static public const NORMAL:String = "normal";
			static public const BLINK:String = "blink";
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				this.currentState = BLINK;
			}

			protected function group1_currentStateChangeHandler(event:StateChangeEvent):void
			{
				switch(event.newState) 
				{
					case NORMAL:
						colorTransition.stop();
						break;
					case BLINK:
						colorTransition.play();
						break;
				}
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<s:Transition autoReverse="true">
			<s:AnimateColor id="colorTransition" target="{circleOuter}"
							colorFrom="#999999" colorTo="#ffffff"
							repeatCount="0" duration="1000">
			</s:AnimateColor>
		</s:Transition>
	</fx:Declarations>
	<s:states>
		<s:State name="normal"/>
		<s:State name="blink"/>
	</s:states>
	
	<s:Ellipse includeIn="normal, blink" width="100%" height="100%">
		<s:fill>
			<s:RadialGradient>
				<s:entries>
					<s:GradientEntry id="circleCenter" color="#FFFFFF" ratio="0.0" alpha="0.8"></s:GradientEntry>
					<s:GradientEntry id="circleInner" color="#FFFFFF" ratio="0.3" alpha="0.8"></s:GradientEntry>
					<s:GradientEntry id="circleOuter" color="#999999" ratio="1.0" alpha="0.3"></s:GradientEntry>
				</s:entries>
			</s:RadialGradient>
		</s:fill>
	</s:Ellipse>
</s:Group>
